\par \pard\plain \ltrpar\s1\ul\ulc0{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\ql\rtlch\af5\afs21\lang255\ltrch\dbch\af5\langfe255\hich\f4\fs21\lang2057\b\loch\f4\fs21\lang2057\b {\rtlch \ltrch\loch\f4\fs21\lang2057\i0\b Compassion.}
\par \pard\plain \ltrpar\s1{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\ql\rtlch\af5\afs21\lang255\ltrch\dbch\af5\langfe255\hich\f4\fs21\lang2057\loch\f4\fs21\lang2057 
